{
  "name": "botshop",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev --config wrangler.jsonc",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "build:shop": "npm --prefix ../web run build",
    "build:admin": "npm --prefix ../admin-web run build",
    "build:web": "npm run build:shop && npm run build:admin",
    "sync:assets": "node ./scripts/sync-web-dist.mjs",
    "build:assets": "npm run build:web && npm run sync:assets"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "1.6.0",
    "botshop-workspace": "file:..",
    "chanfana": "^2.6.3",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.42.0",
    "hono": "^4.6.20",
    "i18next": "^25.6.3",
    "ua-parser-js": "^2.0.6",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.8",
    "@types/node": "22.13.0",
    "@types/service-worker-mock": "^2.0.4",
    "vitest": "~3.0.9",
    "wrangler": "^4.49.0"
  }
}
